                border-radius: 10px;
            }

            #style-7::-webkit-scrollbar
            {
                width: 10px;
                background-color: #F5F5F5;
            }

            #style-7::-webkit-scrollbar-thumb
            {
                border-radius: 10px;
                background-image: -webkit-gradient(linear,
                                                left bottom,
                                                left top,
                                                color-stop(0.44, rgb(122,153,217)),
                                                color-stop(0.72, rgb(73,125,189)),
                                                color-stop(0.86, rgb(28,58,148)));
            }

            #nice_btn {
                margin: auto;
                padding-left: -20px;
                display: flex;
                justify-content: center;
                align-items: center;
                background:#00d8ff;
                font-family: consolas;
                margin-right: 62px;
                margin-top: 25px;
                border-radius: 4px;
            }

            #nice_btn a {
                position: relative;
                display: inline-block;
                padding: 15px 30px;
                color: white;
                text-transform: unset;
                letter-spacing: 4px;
                text-decoration: none;
                font-size: 24px;
                overflow: hidden;
                transition: 0.2s;
            }

            #nice_btn a span 
            {
                position: absolute;
                display: block;
            }

            #nice_btn a span:nth-child(1)
            {
                top: 0;
                left: -100%;
                width: 100%;
                height: 2px;
                background: linear-gradient(90deg, transparent, black);
            }

            #nice_btn a:hover span:nth-child(1)
            {
                left: 100%;
                transition: 1s;
            }

            #nice_btn a span:nth-child(3)
            {
                bottom: 0;
                right: -100%;
                width: 100%;
                height: 2px;
                background: linear-gradient(270deg, transparent, black);
            }

            #nice_btn a:hover span:nth-child(3)
            {
                right: 100%;
                transition: 1s;
                transition-delay: 0.5s;
            }

            *, *:before, *:after {
            box-sizing: border-box;
            -webkit-font-smoothing: antialiased;
